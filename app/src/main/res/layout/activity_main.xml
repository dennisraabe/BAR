        tools:layout_editor_absoluteY="583dp" />

    <EditText
        android:id="@+id/zeit00Promille"
        android:layout_width="147dp"
        android:layout_height="44dp"
        android:ems="10"
        android:inputType="numberDecimal"
        tools:layout_editor_absoluteX="248dp"
        tools:layout_editor_absoluteY="646dp" />

    <EditText
        android:id="@+id/aktuellePromille"
        android:layout_width="149dp"
        android:layout_height="53dp"
        android:ems="10"
        android:inputType="numberDecimal"
        tools:layout_editor_absoluteX="246dp"
        tools:layout_editor_absoluteY="521dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="153dp"
        android:layout_height="22dp"
        android:text="aktueller Promille Wert"
        tools:layout_editor_absoluteX="75dp"
        tools:layout_editor_absoluteY="542dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stunden bis 0,5 Promille"
        tools:layout_editor_absoluteX="77dp"
        tools:layout_editor_absoluteY="596dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stunden bis 0,0 Promille"
        tools:layout_editor_absoluteX="77dp"
        tools:layout_editor_absoluteY="662dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alkoholmenge in g"
        tools:layout_editor_absoluteX="182dp"
        tools:layout_editor_absoluteY="200dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Körpergewicht"
        tools:layout_editor_absoluteX="182dp"
        tools:layout_editor_absoluteY="253dp" />

</androidx.constraintlayout.widget.ConstraintLayout>