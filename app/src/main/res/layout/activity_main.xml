        android:inputType="number"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="238dp" />

    <RadioButton
        android:id="@+id/geschlechtFrau"
        android:layout_width="127dp"
        android:layout_height="46dp"
